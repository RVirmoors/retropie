<theme>
  <formatVersion>4</formatVersion>
  <view name="system">
    <image name="background" extra="true">
      <size>0 1</size>
      <pos>0.5 0.5</pos>
      <origin>0.5 0.5</origin>
    </image>
    <carousel name="systemcarousel">
     <pos>0 0.69</pos>
     <color>FFEDEA60</color>
    </carousel>
    <text name="systemInfo">
     <pos>0.24 0.62</pos>
     <size>0.5 0</size>
     <color>FFFFFFFA</color>
    </text>
    <helpsystem name="help">
     <textColor>ffffff88</textColor>
     <iconColor>ffffff88</iconColor>
    </helpsystem>
  </view>
  <feature supported="video">
   <view name="video">
    <video name="md_video">
     <pos>0.1525 0.35</pos>
     <maxSize>0.255 0.34</maxSize>
     <origin>0.5 0.5</origin>
     <default />
     <showSnapshotNoVideo>true</showSnapshotNoVideo>
     <showSnapshotDelay>false</showSnapshotDelay>
    </video>
   </view>
  </feature>
  <view name="basic">
   <textlist name="gamelist">
    <pos>0.025 0.22</pos>
    <size>0.950 0.68</size>
    <alignment>center</alignment>
    <horizontalMargin>0.01</horizontalMargin>
   </textlist>
  </view>
  <view name="detailed, video">
    <text name="md_lbl_rating, md_lbl_genre, md_lbl_lastplayed, md_rating, md_genre, md_lastplayed">
	<visible>false</visible>
    </text>
    <text name="md_lbl_developer, md_lbl_releasedate, md_lbl_publisher, md_lbl_players, md_lbl_playcount">
      <color>393a3b</color>
      <forceUppercase>1</forceUppercase>
      <fontPath>./art/OPENSANS-LIGHT.TTF</fontPath>
      <fontSize>0.03</fontSize>
      <size>0.3 0.04</size>
    </text>
    <text name="md_developer, md_releasedate, md_publisher, md_players, md_playcount">
      <color>393a3b</color>
      <forceUppercase>1</forceUppercase>
      <fontPath>./art/OPENSANS-LIGHT.TTF</fontPath>
      <fontSize>0.03</fontSize>
      <size>0.28 0.04</size>
    </text>
    <text name="md_description">
      <color>393a3b</color>
      <forceUppercase>0</forceUppercase>
      <fontPath>./art/OPENSANS-LIGHT.TTF</fontPath>
      <fontSize>0.025</fontSize>
    </text>
    <image name="header" extra="true">
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 0.16</size>
      <path>./art/bright.png</path>
    </image>
    <image name="footer" extra="true">
      <pos>0 1</pos>
      <origin>0 1</origin>
      <size>1 0.065</size>
      <path>./art/bright.png</path>
    </image>
    <image name="background">
      <pos>0 0</pos>
      <origin>0 0</origin>
      <size>1 1</size>
      <path>./art/mid.png</path>
    </image>
    <textlist name="gamelist">
      <selectorColor>393a3b</selectorColor>
      <selectedColor>97999b</selectedColor>
      <primaryColor>393a3b</primaryColor>
      <secondaryColor>000000</secondaryColor>
      <fontPath>./art/OPENSANS.TTF</fontPath>
      <fontSize>0.03</fontSize>
      <forceUppercase>1</forceUppercase>
    </textlist>
  </view>
  <view name="basic" />
  <view name="detailed">
    <image name="md_image">
	<origin>0 0</origin>
	<pos>0.025 0.2</pos>
	<maxSize>0.3 0.4</maxSize>
    </image>
  </view>
  <view name="detailed, video">    
    <text name="md_description">
      <pos>0.025 0.61</pos>
      <size>0.59 0.29</size>
    </text>
    <text name="md_lbl_releasedate">
      <pos>0.3 0.2</pos>
    </text>
    <datetime name="md_releasedate">
      <pos>0.32 0.24</pos>
      <format>%Y</format>
    </datetime>
    <text name="md_lbl_developer">
      <pos>0.3 0.28</pos>
    </text>
    <text name="md_developer">
      <pos>0.32 0.32</pos>
    </text>
    <text name="md_lbl_publisher">
      <pos>0.3 0.36</pos>
    </text>
    <text name="md_publisher">
      <pos>0.32 0.4</pos>
    </text>
    <text name="md_lbl_players">
      <pos>0.3 0.44</pos>
    </text>
    <text name="md_players">
      <pos>0.32 0.48</pos>
    </text>
    <text name="md_lbl_playcount">
      <pos>0.3 0.52</pos>
    </text>
    <text name="md_playcount">
      <pos>0.32 0.56</pos>
    </text>
    <image name="gamelist_bg" extra="true">
      <path>./art/bright.png</path>
      <color>FFFDFA20</color>
      <pos>0.635 0.18</pos>
      <size>0.340 0.72</size>
    </image>
    <textlist name="gamelist">
      <pos>0.635 0.18</pos>
      <size>0.340 0.72</size>
      <alignment>left</alignment>
      <horizontalMargin>0.01</horizontalMargin>
    </textlist>
  </view>
</theme>